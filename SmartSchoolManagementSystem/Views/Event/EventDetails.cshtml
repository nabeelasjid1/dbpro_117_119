@model SmartSchoolManagementSystem.Event
@{
    ViewBag.Title = "EventDetails";
    var defaultImageURL = "~/Content/images//placeholder-image.png";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="@Url.Content(Model.ImageUrl)" alt="@Url.Content(defaultImageURL)" style="margin-top:35px">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Name</h2>
                        <p>@Model.Description</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about event</h3>
                                <p>@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="blog-sidebar right">
                    <div class="course-details-content">
                        <div class="course-details-right">
                            <h3>Event Details</h3>
                            <ul>
                                <li>Time <span>4:00PM - 9:00PM</span></li>
                                <li>venue <span>@Model.Venue</span></li>
                            </ul>
                            <a class="default-btn" href="@Url.Action("EventApply", "Event",new {id = Model.EventId})">Apply Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->

