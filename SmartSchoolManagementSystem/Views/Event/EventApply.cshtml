@model SmartSchoolManagementSystem.Event

@{
    ViewBag.Title = "EventApply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Event Join Confirmation</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EventId)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <h4>Are You Sure You Want to Join in this Event</h4>
                <input type="submit" value="Confirm Apply" class="btn btn-default" />
                <a style="color:darkblue" href="@Url.Action("Index", "Event")">Back to Course List</a>
            </div>
        </div>
    </div>
}
