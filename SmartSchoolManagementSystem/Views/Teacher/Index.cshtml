@model SmartSchoolManagementSystem.CollectionViewModel.CollectionOfAllViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Dashboard</li>
    </ol>
</div><!--/.row-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
    </div>
</div><!--/.row-->
<div class="panel panel-container">
    <div class="row">
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-teal panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-building color-blue"></em>
                    <div class="large">@*@Model.Department.Name*@EE</div>
                    <div class="text-muted">Department Name</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-teal panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-pencil-square color-red"></em>
                    <div class="large count">@*@Model.Complaints.Count()*@12</div>
                    <div class="text-muted">Courses</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-pencil-square color-teal"></em>
                    <div class="large count">@*@Model.Events.Count()*@12</div>
                    <div class="text-muted">Events</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-teal panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-pencil-square color-red"></em>
                    <div class="large count">@*@Model.Courses.Count()*@12</div>
                    <div class="text-muted">Courses</div>
                </div>
            </div>
        </div>
    </div><!--/.row-->
    <div class="row">
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-pencil-square color-blue"></em>
                    <div class="large count">@*@Model.News.Count()*@12</div>
                    <div class="text-muted">News</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <div class="row no-padding">
                    <em class="fa fa-xl fa-pencil-square color-orange"></em>
                    <div class="large count">@*@Model.Notices.Count()*@12</div>
                    <div class="text-muted">Notices</div>
                </div>
            </div>
        </div>
    </div>
</div>