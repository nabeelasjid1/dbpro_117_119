@model SmartSchoolManagementSystem.CollectionViewModel.ParentStudentRelationViewModel

@{
    ViewBag.Title = "MakeParentStudentRelation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>MakeParentStudentRelation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ParentStudentRelationViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.Students, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.StudentId, new SelectList(Model.Students, "StudentId", "FirstName", new { id = Model.StudentId }), htmlAttributes: new { @class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Parents, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.ParentId, new SelectList(Model.Parents, "ParentId", "FirstName"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
