@model SmartSchoolManagementSystem.CollectionViewModel.ParentCollectionViewModel

@{
    ViewBag.Title = "DeleteParent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>DeleteParent</h2>

<h3>Are you sure you want to delete this?</h3>
@Html.HiddenFor(model => model.Parent.UserId)
<div>
    <h4>Parent</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Model.Parent.FirstName
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Model.Parent.LastName
        </dd>

        <dt>
            Contact
        </dt>

        <dd>
            @Model.Parent.Contact
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ParentsList")
        </div>
    }
</div>
