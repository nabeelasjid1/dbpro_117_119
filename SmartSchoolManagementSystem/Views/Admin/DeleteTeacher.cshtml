@model SmartSchoolManagementSystem.CollectionViewModel.TeacherCollectionViewModel

@{
    ViewBag.Title = "DeleteTeacher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>DeleteTeacher</h2>

<h3>Are you sure you want to delete this?</h3>
@Html.HiddenFor(model => model.Instructor.UserId)
<div>
    <h4>StudentCollectionViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Model.Instructor.FirstName
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Model.Instructor.LastName
        </dd>

        <dt>
            Contact Number
        </dt>

        <dd>
            @Model.Instructor.Contact
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "TeachersList")
        </div>
    }
</div>
